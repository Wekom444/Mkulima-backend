# 1. Supabase (Postgres, Auth, Storage)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# 2. Database Connection (SSL enforced)
DATABASE_URL=postgresql://postgres:your_db_password@db.<region>.supabase.co:5432/postgres?sslmode=require

# 3. JWT Authentication
JWT_SECRET_KEY=your_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# 4. M-Pesa C2B (Buyer Charge)
MPESA_API_URL=https://api.safaricom.co.ke/mpesa/stkpush/v1/processrequest
MPESA_KEY=your_mpesa_consumer_key
MPESA_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_shortcode
MPESA_CALLBACK_URL=https://your-domain.com/mpesa/callback

# 5. M-Pesa B2C (Farmer Payout)
MPESA_B2C_API_URL=https://api.safaricom.co.ke/mpesa/b2c/v1/paymentrequest
MPESA_INITIATOR_NAME=your_initiator_name
MPESA_SECURITY_CREDENTIAL=your_encrypted_security_credential
MPESA_B2C_QUEUE_TIMEOUT_URL=https://your-domain.com/mpesa/b2c/timeout
MPESA_B2C_RESULT_URL=https://your-domain.com/mpesa/b2c/result

# 6. Airtel Money
AIRTEL_API_URL=https://openapi.airtel.africa/merchant/v1/payments
AIRTEL_KEY=your_airtel_api_key
AIRTEL_SERVICE_ID=your_airtel_service_id

# 7. Billing & Fees Configuration
COMMISSION_RATE=0.02      # 2% transaction fee
SPONSOR_RATE=0.01         # 1% sponsorship/featured fee
BASE_RATE_PER_KM=5        # Delivery base rate per KM
WEIGHT_SURCHARGE_PER_KG=2 # Delivery surcharge per KG

# 8. Environment
ENV=production
